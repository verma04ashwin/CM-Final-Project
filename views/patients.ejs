<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Patient List ‚Äî FHIR R4</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    table { width: 100%; border-collapse: collapse; margin-top: 16px; background: white; }
    th, td { padding: 12px; text-align: left; border-bottom: 1px solid #e0e0e0; }
    th { background: #f5f5f5; font-weight: 600; color: #333; }
    tr:hover { background: #fafafa; }
    a { color: #0b79d0; text-decoration: none; }
    a:hover { text-decoration: underline; }
    .badge { padding: 4px 8px; border-radius: 4px; font-size: 0.85em; background: #e3f2fd; color: #1976d2; }
    .loading { text-align: center; padding: 40px; color: #666; }
    .error { padding: 20px; background: #ffebee; color: #c62828; border-radius: 6px; margin-top: 16px; }
    .filter-bar { margin-bottom: 16px; padding: 16px; background: white; border-radius: 8px; }
    .filter-bar input { width: 300px; padding: 8px; margin-right: 8px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>üë• Patient List</h1>
    
    <div class="filter-bar">
      <input type="text" id="searchInput" placeholder="Search by ID or name..." />
      <button onclick="loadPatients()">üîç Search</button>
      <button onclick="document.getElementById('searchInput').value=''; loadPatients()">Clear</button>
    </div>
    
    <div id="content">
      <div class="loading">Loading patients...</div>
    </div>
    
    <p style="margin-top: 20px;">
      <a href="/">‚Üê Back to Home</a> | 
      <a href="/fhir/Patient">View FHIR JSON</a>
    </p>
  </div>

  <script>
    let allPatients = [];
    
    async function loadPatients() {
      const contentDiv = document.getElementById('content');
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      
      try {
        contentDiv.innerHTML = '<div class="loading">Loading patients...</div>';
        
        const resp = await fetch('/api/patients');
        
        if (resp.ok) {
          allPatients = await resp.json();
          displayPatients(allPatients, searchTerm);
        } else {
          const text = await resp.text();
          contentDiv.innerHTML = `<div class="error"><strong>Error:</strong> ${text}</div>`;
        }
      } catch (err) {
        contentDiv.innerHTML = `<div class="error"><strong>Error:</strong> ${err.message}</div>`;
      }
    }
    
    function displayPatients(patients, searchTerm = '') {
      const contentDiv = document.getElementById('content');
      
      // Filter patients
      let filtered = patients;
      if (searchTerm) {
        filtered = patients.filter(p => 
          (p.id && p.id.toLowerCase().includes(searchTerm)) ||
          (p.name && p.name.toLowerCase().includes(searchTerm)) ||
          (p.patientId && p.patientId.toLowerCase().includes(searchTerm))
        );
      }
      
      if (filtered.length === 0) {
        contentDiv.innerHTML = '<div class="loading">No patients found</div>';
        return;
      }
      
      const rows = filtered.map(p => {
        const patientId = p.id || p.patientId;
        const name = p.name || patientId;
        const gender = p.gender || 'unknown';
        const birthDate = p.birthDate || 'N/A';
        const status = p.active ? '<span class="badge">Active</span>' : '<span class="badge" style="background:#fce4ec;color:#c2185b">Inactive</span>';
        
        return `
          <tr>
            <td><a href="/patient/${encodeURIComponent(patientId)}"><strong>${patientId}</strong></a></td>
            <td>${name}</td>
            <td>${gender}</td>
            <td>${birthDate}</td>
            <td>${status}</td>
            <td>
              <a href="/patient/${encodeURIComponent(patientId)}">View Details ‚Üí</a>
            </td>
          </tr>
        `;
      }).join('');
      
      contentDiv.innerHTML = `
        <p><strong>${filtered.length}</strong> patient(s) found</p>
        <table>
          <thead>
            <tr>
              <th>Patient ID</th>
              <th>Name</th>
              <th>Gender</th>
              <th>Birth Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            ${rows}
          </tbody>
        </table>
      `;
    }
    
    // Load on page load
    loadPatients();
    
    // Search on Enter key
    document.getElementById('searchInput').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        loadPatients();
      }
    });
  </script>
</body>
</html>
